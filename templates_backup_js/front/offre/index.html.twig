{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1 class="mb-3">
        <i class="bi bi-tag text-primary"></i> Offres bancaires
    </h1>
    <p class="text-muted">Profitez de nos meilleures offres</p>
</div>

{% if offres|length > 0 %}
    <div class="row g-4">
        {% for offre in offres %}
            <div class="col-md-6">
                <div class="card h-100 shadow-lg border-0 offer-card">
                    <div class="card-header text-white position-relative overflow-hidden" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); min-height: 120px;">
                        <div class="position-absolute top-0 end-0 p-3">
                            {% if offre.isCurrentlyActive() %}
                                <span class="badge bg-success px-3 py-2">
                                    <i class="bi bi-check-circle"></i> Valide
                                </span>
                            {% else %}
                                <span class="badge bg-secondary px-3 py-2">
                                    <i class="bi bi-x-circle"></i> Expirée
                                </span>
                            {% endif %}
                        </div>
                        <h4 class="mb-2">{{ offre.titre }}</h4>
                        <p class="mb-0 opacity-75">
                            <i class="bi bi-tag-fill"></i> {{ offre.typeOffre|title }}
                        </p>
                    </div>

                    <div class="card-body p-4">
                        {% if offre.description %}
                            <p class="text-secondary mb-4">{{ offre.description }}</p>
                        {% endif %}

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">
                                        <i class="bi bi-calendar-event"></i> Début
                                    </small>
                                    <strong>{{ offre.dateDebut|date('d/m/Y') }}</strong>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">
                                        <i class="bi bi-calendar-x"></i> Fin
                                    </small>
                                    <strong>{{ offre.dateFin|date('d/m/Y') }}</strong>
                                </div>
                            </div>
                        </div>

                        {% if offre.tauxInteret %}
                            <div class="alert alert-info border-0 mb-4">
                                <h5 class="mb-0">
                                    <i class="bi bi-percent"></i> Taux: {{ offre.tauxInteret }}%
                                </h5>
                            </div>
                        {% endif %}

                        {% if offre.conditions %}
                            <div class="conditions-box p-3 bg-light rounded mb-3">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-info-circle"></i> Conditions
                                </h6>
                                <p class="small mb-0">{{ offre.conditions }}</p>
                            </div>
                        {% endif %}
                    </div>

                    {% if offre.isCurrentlyActive() %}
                        <div class="card-footer bg-transparent border-0">
                            <a href="{{ path('client_rdv_book') }}" class="btn btn-lg btn-primary w-100">
                                <i class="bi bi-check-circle"></i> Profiter de l'offre
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-tags text-muted" style="font-size: 5rem;"></i>
            <h4 class="text-muted mt-4">Aucune offre disponible</h4>
            <p class="text-muted">Revenez bientôt pour découvrir nos nouvelles offres.</p>
        </div>
    </div>
{% endif %}

<style>
    .offer-card {
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .offer-card:hover {
        transform: scale(1.03);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2) !important;
    }
    .info-box {
        transition: all 0.3s ease;
    }
    .info-box:hover {
        background: linear-gradient(135deg, #f093fb15 0%, #f5576c15 100%) !important;
        transform: scale(1.05);
    }
</style>
{% endblock %}
