{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('client_rdv_my_appointments') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour à mes rendez-vous
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0">
            <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h3 class="mb-0">
                    <i class="bi bi-ticket-perforated"></i> Ticket de rendez-vous
                </h3>
            </div>

            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="d-inline-block p-4 bg-light rounded-3 shadow-sm">
                        <div class="bg-white p-3 rounded">
                            {% if rdv.qrCode %}
                                <img src="data:image/png;base64,{{ rdv.qrCode }}" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                            {% else %}
                                <div style="width: 200px; height: 200px;" class="bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center rounded">
                                    <i class="bi bi-qr-code text-muted" style="font-size: 4rem;"></i>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <h4 class="text-primary mb-2">{{ rdv.ticketReference }}</h4>
                    <span class="badge {{ rdv.statutBadge }} px-4 py-2" style="font-size: 1rem;">
                        {{ rdv.statutLabel }}
                    </span>
                </div>

                <hr class="my-4">

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-calendar3 text-primary"></i> DATE
                            </label>
                            <p class="h5 mb-0">{{ rdv.dateRdv|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-clock text-primary"></i> HEURE
                            </label>
                            <p class="h5 mb-0">{{ rdv.heureRdv|date('H:i') }}</p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-briefcase text-primary"></i> SERVICE
                            </label>
                            <p class="h5 mb-0">{{ rdv.service.nomService }}</p>
                            {% if rdv.service.description %}
                                <p class="text-muted small mb-0 mt-2">{{ rdv.service.description }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-building text-primary"></i> AGENCE
                            </label>
                            <p class="h5 mb-2">{{ rdv.agence.nomAgence }}</p>
                            <p class="text-muted mb-1">
                                <i class="bi bi-geo-alt"></i> {{ rdv.agence.adresse }}
                            </p>
                            <p class="text-muted mb-1">
                                <i class="bi bi-telephone"></i> {{ rdv.agence.telephone }}
                            </p>
                            {% if rdv.agence.horaires %}
                                <p class="text-muted mb-0">
                                    <i class="bi bi-clock"></i> {{ rdv.agence.horaires }}
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-building-check text-primary"></i> BANQUE
                            </label>
                            <p class="h5 mb-0">{{ rdv.banque.nomBq }}</p>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="alert alert-info border-0 shadow-sm">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle"></i> Informations importantes
                    </h6>
                    <ul class="small mb-0">
                        <li>Présentez ce ticket (QR code) à votre arrivée</li>
                        <li>Arrivez 10 minutes avant l'heure prévue</li>
                        <li>Apportez vos documents d'identité</li>
                        <li>En cas d'empêchement, annulez votre rendez-vous 24h à l'avance</li>
                    </ul>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button onclick="window.print()" class="btn btn-lg btn-outline-primary">
                        <i class="bi bi-printer"></i> Imprimer le ticket
                    </button>
                    {% if rdv.statut in ['pending', 'confirmed'] %}
                        <form method="post" action="{{ path('client_rdv_cancel', {id: rdv.id}) }}">
                            <button type="submit" class="btn btn-lg btn-outline-danger w-100" onclick="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?')">
                                <i class="bi bi-x-circle"></i> Annuler le rendez-vous
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        .btn, .sidebar, .navbar, a[href*="retour"] {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
    .info-group {
        transition: all 0.3s ease;
    }
    .info-group:hover {
        background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%) !important;
        transform: translateX(5px);
    }
</style>
{% endblock %}
