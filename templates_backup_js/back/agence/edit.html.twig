{% extends 'base.html.twig' %}

{% block title %}Modifier une Agence{% endblock %}
{% block page_title %}Modifier Agence{% endblock %}
{% block breadcrumb %}<a href="{{ path('app_dashboard') }}">Dashboard</a> / <a href="{{ path('app_agence_index') }}">Agences</a> / <span class="active">Modifier</span>{% endblock %}

{% block body %}
    <div class="content-card">
        <div class="card-header">
            <h3><i class="fas fa-edit me-2"></i>Modifier l'agence</h3>
            <a href="{{ path('app_agence_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour
            </a>
        </div>
        
        <form id="agenceEditForm" class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label for="nom" class="form-label fw-bold">
                            <i class="fas fa-building me-2"></i>Nom de l'agence *
                        </label>
                        <input type="text" class="form-control" id="nom" required 
                               value="Agence Zitouna Tunis Centre">
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="banque" class="form-label fw-bold">
                            <i class="fas fa-landmark me-2"></i>Banque *
                        </label>
                        <select class="form-select" id="banque" required>
                            <option value="1" selected>Banque Zitouna</option>
                            <option value="2">Amen Bank</option>
                            <option value="3">BIAT</option>
                            <option value="4">UBCI</option>
                            <option value="5">ATB</option>
                            <option value="6">Banque de Tunisie</option>
                            <option value="7">Wifak Bank</option>
                            <option value="8">BNA</option>
                        </select>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="type_agence" class="form-label fw-bold">
                            <i class="fas fa-tag me-2"></i>Type d'agence *
                        </label>
                        <select class="form-select" id="type_agence" required>
                            <option value="principale" selected>Principale</option>
                            <option value="secondaire">Secondaire</option>
                            <option value="regionale">Régionale</option>
                            <option value="succursale">Succursale</option>
                            <option value="siege">Siège social</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label for="statut" class="form-label fw-bold">
                            <i class="fas fa-circle me-2"></i>Statut *
                        </label>
                        <select class="form-select" id="statut" required>
                            <option value="actif" selected>Actif</option>
                            <option value="en_attente">En attente</option>
                            <option value="inactif">Inactif</option>
                            <option value="en_maintenance">En maintenance</option>
                        </select>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="telephone" class="form-label fw-bold">
                            <i class="fas fa-phone me-2"></i>Téléphone *
                        </label>
                        <input type="tel" class="form-control" id="telephone" required 
                               value="+216 70 100 101">
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="email" class="form-label fw-bold">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <input type="email" class="form-control" id="email" 
                               value="tunis.centre@banquezitouna.com">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label for="adresse" class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-2"></i>Adresse *
                        </label>
                        <textarea class="form-control" id="adresse" rows="3" required>Avenue Habib Bourguiba, Tunis</textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label for="ville" class="form-label fw-bold">
                                    <i class="fas fa-city me-2"></i>Ville *
                                </label>
                                <input type="text" class="form-control" id="ville" required value="Tunis">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label for="code_postal" class="form-label fw-bold">
                                    <i class="fas fa-mail-bulk me-2"></i>Code Postal
                                </label>
                                <input type="text" class="form-control" id="code_postal" value="1000">
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-clock me-2"></i>Horaires d'ouverture *
                        </label>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="heure_ouverture" class="form-label small">Heure d'ouverture</label>
                                <input type="time" class="form-control" id="heure_ouverture" required value="08:00">
                            </div>
                            <div class="col-md-6">
                                <label for="heure_fermeture" class="form-label small">Heure de fermeture</label>
                                <input type="time" class="form-control" id="heure_fermeture" required value="17:00">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-coffee me-2"></i>Pause déjeuner
                        </label>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="debut_pause" class="form-label small">Début de pause</label>
                                <input type="time" class="form-control" id="debut_pause" value="12:00">
                            </div>
                            <div class="col-md-6">
                                <label for="fin_pause" class="form-label small">Fin de pause</label>
                                <input type="time" class="form-control" id="fin_pause" value="13:30">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label for="responsable" class="form-label fw-bold">
                            <i class="fas fa-user-tie me-2"></i>Responsable *
                        </label>
                        <input type="text" class="form-control" id="responsable" required 
                               value="Fatma Ben Salah">
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label for="tel_responsable" class="form-label fw-bold">
                            <i class="fas fa-mobile-alt me-2"></i>Téléphone du responsable
                        </label>
                        <input type="tel" class="form-control" id="tel_responsable" 
                               value="+216 98 123 456">
                    </div>
                </div>
            </div>
            
            <!-- Statistiques de l'agence -->
            <div class="row mt-4">
                <div class="col-12">
                    <h5 class="fw-bold mb-3"><i class="fas fa-chart-bar me-2"></i>Statistiques de l'agence</h5>
                </div>
                <div class="col-md-4">
                    <div class="stat-card-small">
                        <div class="stat-icon-small" style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-info-small">
                            <h6>Employés</h6>
                            <p class="mb-0">15</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card-small">
                        <div class="stat-icon-small" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <div class="stat-info-small">
                            <h6>Rendez-vous/mois</h6>
                            <p class="mb-0">120</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card-small">
                        <div class="stat-icon-small" style="background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <div class="stat-info-small">
                            <h6>Clients actifs</h6>
                            <p class="mb-0">1,850</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-4">
                <label for="description" class="form-label fw-bold">
                    <i class="fas fa-file-alt me-2"></i>Description
                </label>
                <textarea class="form-control" id="description" rows="3">Agence principale de la Banque Zitouna au centre-ville de Tunis. Équipée de 5 guichets, 2 distributeurs automatiques et une salle de réunion pour les clients.</textarea>
            </div>
            
            <hr class="my-4">
            
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_agence_index') }}" class="btn btn-outline-secondary px-5">
                    <i class="fas fa-times me-2"></i> Annuler
                </a>
                <button type="submit" class="btn btn-success px-5">
                    <i class="fas fa-save me-2"></i> Enregistrer les modifications
                </button>
            </div>
        </form>
    </div>
    
    <style>
        .stat-card-small {
            display: flex;
            align-items: center;
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            border: 1px solid #e9ecef;
            height: 100%;
        }
        
        .stat-icon-small {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            margin-right: 15px;
        }
        
        .stat-info-small h6 {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 5px;
        }
        
        .stat-info-small p {
            font-size: 24px;
            font-weight: 700;
            color: #212529;
        }
    </style>
    
    <script>
        document.getElementById('agenceEditForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validation simple
            const nom = document.getElementById('nom').value;
            const banque = document.getElementById('banque').value;
            const telephone = document.getElementById('telephone').value;
            const adresse = document.getElementById('adresse').value;
            
            if (!nom || !banque || !telephone || !adresse) {
                alert('Veuillez remplir tous les champs obligatoires (*)');
                return;
            }
            
            // Simulation de modification
            alert('Agence modifiée avec succès! (Simulation)');
            
            // Redirection vers la liste des agences
            setTimeout(() => {
                window.location.href = "{{ path('app_agence_index') }}";
            }, 1000);
        });
    </script>
{% endblock %}