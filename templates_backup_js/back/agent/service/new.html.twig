{% extends 'back/base_agent.html.twig' %}

{% block title %}Nouveau service - Agent{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Créer un nouveau service</h2>
        <p class="text-muted">{{ banque.nomBq }}</p>
    </div>
    <a href="{{ path('agent_service_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" action="{{ path('agent_service_new') }}">
            <div class="mb-3">
                <label for="nom_service" class="form-label"><strong>Nom du service *</strong></label>
                <input type="text" class="form-control" id="nom_service" name="nom_service" required
                       placeholder="Ex: Ouverture de compte, Demande de crédit...">
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label"><strong>Description du service *</strong></label>
                <textarea class="form-control" id="description" name="description" rows="4" required
                          placeholder="Décrivez le service en détail..."></textarea>
            </div>
            
            <div class="d-flex gap-2 pt-3 border-top">
                <a href="{{ path('agent_service_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i>Créer le service
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--dark-gray);
    }
    
    .form-control {
        border-radius: 8px;
        border: 1px solid var(--border-gray);
        padding: 0.625rem 0.875rem;
    }
    
    .form-control:focus {
        border-color: var(--secondary-blue);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
</style>
{% endblock %}
