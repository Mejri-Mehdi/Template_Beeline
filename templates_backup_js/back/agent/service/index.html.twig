{% extends 'back/base_agent.html.twig' %}

{% block title %}Services - Agent{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Services bancaires</h2>
        <p class="text-muted">{{ banque.nomBq }}</p>
    </div>
    <a href="{{ path('agent_service_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nouveau service
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if services|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nom du service</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for service in services %}
                            <tr>
                                <td><strong>{{ service.nomService }}</strong></td>
                                <td>{{ service.description|length > 80 ? service.description|slice(0, 80) ~ '...' : service.description }}</td>
                                <td>
                                    <a href="{{ path('agent_service_edit', {id: service.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-list-check" style="font-size: 3rem; color: var(--medium-gray);"></i>
                <p class="text-muted mt-3">Aucun service</p>
                <a href="{{ path('agent_service_new') }}" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cr√©er le premier service
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
