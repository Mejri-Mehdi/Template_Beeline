{% extends 'admin/base_admin.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1>Tous les rendez-vous</h1>
    <p class="text-muted">Vue système complète</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if rendez_vous|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Client</th>
                            <th>Banque</th>
                            <th>Service</th>
                            <th>Agence</th>
                            <th>Date & Heure</th>
                            <th>Statut</th>
                            <th>Ticket</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rdv in rendez_vous %}
                            <tr>
                                <td>{{ rdv.id }}</td>
                                <td>
                                    <strong>{{ rdv.client.nom }} {{ rdv.client.prenom }}</strong><br>
                                    <small class="text-muted">{{ rdv.client.email }}</small>
                                </td>
                                <td>{{ rdv.banque.nomBq }}</td>
                                <td>{{ rdv.service.nomService }}</td>
                                <td>{{ rdv.agence.nomAgence }}</td>
                                <td>
                                    <i class="bi bi-calendar3"></i> {{ rdv.dateRdv|date('d/m/Y') }}<br>
                                    <i class="bi bi-clock"></i> {{ rdv.heureRdv|date('H:i') }}
                                </td>
                                <td><span class="badge {{ rdv.statutBadge }}">{{ rdv.statutLabel }}</span></td>
                                <td><code class="small">{{ rdv.ticketReference }}</code></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">Aucun rendez-vous dans le système</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
