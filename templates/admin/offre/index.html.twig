{% extends 'admin/base_admin.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1>Toutes les offres bancaires</h1>
    <p class="text-muted">Vue système complète</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if offres|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Banque</th>
                            <th>Titre</th>
                            <th>Type</th>
                            <th>Période</th>
                            <th>Taux</th>
                            <th>Actif</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offre in offres %}
                            <tr>
                                <td>{{ offre.id }}</td>
                                <td><strong>{{ offre.banque.nomBq }}</strong></td>
                                <td>{{ offre.titre }}</td>
                                <td><span class="badge bg-info">{{ offre.typeOffre|title }}</span></td>
                                <td>
                                    <small>
                                        <i class="bi bi-calendar-event"></i> {{ offre.dateDebut|date('d/m/Y') }}<br>
                                        <i class="bi bi-calendar-x"></i> {{ offre.dateFin|date('d/m/Y') }}
                                    </small>
                                </td>
                                <td>
                                    {% if offre.tauxInteret %}
                                        <strong>{{ offre.tauxInteret }}%</strong>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if offre.isCurrentlyActive() %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Expiré</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">Aucune offre dans le système</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
