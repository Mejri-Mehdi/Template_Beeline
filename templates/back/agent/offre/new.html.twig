{% extends 'back/base_agent.html.twig' %}

{% block title %}Nouvelle offre - Agent{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Créer une nouvelle offre</h2>
        <p class="text-muted">{{ banque.nomBq }}</p>
    </div>
    <a href="{{ path('agent_offre_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" action="{{ path('agent_offre_new') }}">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="titre" class="form-label"><strong>Titre de l'offre *</strong></label>
                    <input type="text" class="form-control" id="titre" name="titre" required
                           placeholder="Ex: Crédit Immobilier - Taux Réduit">
                </div>
                
                <div class="col-md-6 mb-3">
                    <label for="type_offre" class="form-label"><strong>Type d'offre *</strong></label>
                    <select class="form-select" id="type_offre" name="type_offre" required>
                        <option value="">Sélectionner un type</option>
                        <option value="taux_reduit">Taux Réduit</option>
                        <option value="promotion_speciale">Promotion Spéciale</option>
                        <option value="nouveau_client">Nouveau Client</option>
                        <option value="fidelite">Fidélité</option>
                        <option value="saisonnier">Saisonnier</option>
                    </select>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label"><strong>Description de l'offre *</strong></label>
                <textarea class="form-control" id="description" name="description" rows="4" required
                          placeholder="Décrivez l'offre en détail, ses avantages, ses caractéristiques..."></textarea>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="taux" class="form-label"><strong>Taux (%) *</strong></label>
                    <input type="number" step="0.01" class="form-control" id="taux" name="taux" required
                           placeholder="3.5">
                </div>
                
                <div class="col-md-4 mb-3">
                    <label for="date_debut" class="form-label"><strong>Date début *</strong></label>
                    <input type="date" class="form-control" id="date_debut" name="date_debut" required>
                </div>
                
                <div class="col-md-4 mb-3">
                    <label for="date_fin" class="form-label"><strong>Date fin *</strong></label>
                    <input type="date" class="form-control" id="date_fin" name="date_fin" required>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="conditions" class="form-label"><strong>Conditions d'éligibilité *</strong></label>
                <textarea class="form-control" id="conditions" name="conditions" rows="4" required
                          placeholder="Listez les conditions pour bénéficier de cette offre..."></textarea>
            </div>
            
            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="active" name="active" value="1" checked>
                <label class="form-check-label" for="active">
                    <strong>Activer cette offre immédiatement</strong>
                </label>
            </div>
            
            <div class="d-flex gap-2 pt-3 border-top">
                <a href="{{ path('agent_offre_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i>Créer l'offre
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--dark-gray);
    }
    
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid var(--border-gray);
        padding: 0.625rem 0.875rem;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: var(--secondary-blue);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
</style>
{% endblock %}
