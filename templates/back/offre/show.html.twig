{% extends 'base.html.twig' %}

{% block title %}Détails de l'Offre{% endblock %}
{% block page_title %}Détails de l'Offre{% endblock %}
{% block breadcrumb %}<a href="{{ path('app_dashboard') }}">Dashboard</a> / <a href="{{ path('app_offre_index') }}">Offres</a> / <span class="active">Détails</span>{% endblock %}

{% block body %}
    <div class="content-card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3><i class="fas fa-info-circle me-2"></i>Détails de l'offre</h3>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_offre_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Retour
                    </a>
                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-outline-success">
                        <i class="fas fa-edit me-2"></i> Modifier
                    </a>
                </div>
            </div>
        </div>
        
        <!-- En-tête compact -->
        <div class="offer-header mb-4">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="offer-title mb-2">{{ offre.nom }}</h2>
                    <div class="offer-meta d-flex flex-wrap align-items-center gap-2">
                        <span class="badge bg-primary">{{ offre.type_offre }}</span>
                        <span class="badge {{ offre.statut == 'Active' ? 'bg-success' : 'bg-secondary' }}">
                            {{ offre.statut }}
                        </span>
                        <span class="text-muted">
                            <i class="fas fa-hashtag me-1"></i>#OFF-{{ "%03d"|format(offre.id) }}
                        </span>
                        <span class="text-muted ms-2">
                            <i class="fas fa-university me-1"></i>{{ offre.banque_nom }}
                        </span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-badges d-flex justify-content-end gap-3">
                        <div class="stat-item text-center">
                            <div class="stat-value text-primary">{{ offre.vues }}</div>
                            <div class="stat-label small">Vues</div>
                        </div>
                        <div class="stat-item text-center">
                            <div class="stat-value text-success">{{ offre.applications }}</div>
                            <div class="stat-label small">Applications</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-3">
            <!-- Colonne principale -->
            <div class="col-lg-8">
                <!-- Description -->
                <div class="detail-section">
                    <h5 class="section-title">
                        <i class="fas fa-align-left me-2"></i>Description
                    </h5>
                    <div class="description-content">
                        {{ offre.description|nl2br }}
                    </div>
                </div>
                
                <!-- Conditions -->
                <div class="detail-section">
                    <h5 class="section-title">
                        <i class="fas fa-clipboard-list me-2"></i>Conditions d'éligibilité
                    </h5>
                    <div class="conditions-content">
                        {{ offre.conditions|nl2br }}
                    </div>
                </div>
                
                <!-- Documents requis -->
                <div class="detail-section">
                    <h5 class="section-title">
                        <i class="fas fa-file-alt me-2"></i>Documents requis
                    </h5>
                    <div class="documents-grid">
                        {% for document in offre.documents_requis %}
                        <div class="document-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>{{ document }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Informations clés -->
                <div class="detail-section">
                    <h5 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Informations clés
                    </h5>
                    <div class="quick-info">
                        <div class="info-item">
                            <span class="info-label">Dates</span>
                            <span class="info-value">{{ offre.date_debut }} - {{ offre.date_fin }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Taux d'intérêt</span>
                            <span class="info-value highlight">{{ offre.taux_interet }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Montant</span>
                            <span class="info-value">{{ offre.montant_min }} - {{ offre.montant_max }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Durée maximum</span>
                            <span class="info-value">{{ offre.duree_max }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Date création</span>
                            <span class="info-value">{{ offre.date_creation }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Créateur</span>
                            <span class="info-value">{{ offre.createur }}</span>
                        </div>
                    </div>
                </div>
                
                <!-- Actions rapides -->
                <div class="detail-section mt-3">
                    <h5 class="section-title">
                        <i class="fas fa-bolt me-2"></i>Actions rapides
                    </h5>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" onclick="simulateApplication()">
                            <i class="fas fa-file-signature me-2"></i> Simuler une application
                        </button>
                        <button class="btn btn-outline-primary" onclick="duplicateOffre()">
                            <i class="fas fa-copy me-2"></i> Dupliquer cette offre
                        </button>
                        {% if offre.statut == 'Expirée' %}
                        <button class="btn btn-outline-warning" onclick="extendOffer()">
                            <i class="fas fa-calendar-plus me-2"></i> Renouveler l'offre
                        </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Statistiques compactes -->
        <div class="row mt-4 g-3">
            <div class="col-12">
                <div class="detail-section">
                    <h5 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Statistiques
                    </h5>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="performance-card">
                                <div class="performance-icon bg-primary">
                                    <i class="fas fa-eye"></i>
                                </div>
                                <div class="performance-content">
                                    <h3>{{ offre.vues }}</h3>
                                    <p>Vues totales</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="performance-card">
                                <div class="performance-icon bg-success">
                                    <i class="fas fa-mouse-pointer"></i>
                                </div>
                                <div class="performance-content">
                                    <h3>340</h3>
                                    <p>Clics</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="performance-card">
                                <div class="performance-icon bg-warning">
                                    <i class="fas fa-file-signature"></i>
                                </div>
                                <div class="performance-content">
                                    <h3>{{ offre.applications }}</h3>
                                    <p>Applications</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="performance-card">
                                <div class="performance-icon bg-info">
                                    <i class="fas fa-percentage"></i>
                                </div>
                                <div class="performance-content">
                                    <h3>{{ (offre.applications / offre.vues * 100)|round(1) }}%</h3>
                                    <p>Taux de conversion</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function simulateApplication() {
            alert('Simulation de demande de crédit...\n\nVous serez redirigé vers le formulaire de demande.');
        }
        
        function duplicateOffre() {
            if (confirm('Dupliquer cette offre ?')) {
                alert('Redirection vers création avec données pré-remplies...');
            }
        }
        
        function extendOffer() {
            const newDate = prompt('Entrez la nouvelle date de fin (YYYY-MM-DD):');
            if (newDate) {
                alert(`Offre prolongée jusqu'au ${newDate} (simulation)`);
            }
        }
    </script>
    
    <style>
        /* En-tête compact */
        .offer-header {
            background: #f8fafc;
            border-radius: 12px;
            padding: 20px;
            border: 1px solid #e2e8f0;
        }
        
        .offer-title {
            color: #1e293b;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        
        .offer-meta .badge {
            font-size: 0.8rem;
            padding: 5px 10px;
        }
        
        /* Sections détaillées */
        .detail-section {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            border: 1px solid #e9ecef;
            margin-bottom: 15px;
        }
        
        .section-title {
            color: #4f46e5;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            align-items: center;
        }
        
        /* Contenu */
        .description-content, .conditions-content {
            line-height: 1.6;
            color: #475569;
            font-size: 0.95rem;
        }
        
        /* Documents requis */
        .documents-grid {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .document-item {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            background: #f0fdf4;
            border-radius: 8px;
            border: 1px solid #bbf7d0;
            font-size: 0.9rem;
        }
        
        /* Informations clés */
        .quick-info {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        
        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #f1f5f9;
        }
        
        .info-item:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 500;
            color: #64748b;
            font-size: 0.9rem;
        }
        
        .info-value {
            font-weight: 600;
            color: #1e293b;
            text-align: right;
            font-size: 0.9rem;
        }
        
        .info-value.highlight {
            color: #4f46e5;
            font-weight: 700;
        }
        
        /* Statistiques */
        .stats-badges .stat-item {
            background: white;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            min-width: 80px;
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            line-height: 1;
        }
        
        .stat-label {
            color: #64748b;
            margin-top: 4px;
        }
        
        /* Cartes de performance */
        .performance-card {
            display: flex;
            align-items: center;
            gap: 15px;
            background: white;
            padding: 15px;
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            height: 100%;
        }
        
        .performance-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
        }
        
        .performance-content h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            color: #1e293b;
        }
        
        .performance-content p {
            margin: 3px 0 0;
            color: #64748b;
            font-size: 0.85rem;
        }
        
        /* Boutons */
        .btn {
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
            padding: 8px 16px;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .offer-header {
                padding: 15px;
            }
            
            .offer-title {
                font-size: 1.3rem;
            }
            
            .detail-section {
                padding: 15px;
            }
            
            .performance-card {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }
            
            .documents-grid {
                grid-template-columns: 1fr;
            }
        }
        
        /* Espacement réduit */
        .row.g-3 > [class*='col-'] {
            padding: 0 6px;
        }
        
        .row.g-3 {
            margin: 0 -6px;
        }
        
        /* Suppression des marges excessives */
        .mb-5 { margin-bottom: 1.5rem !important; }
        .mb-4 { margin-bottom: 1rem !important; }
        .mb-3 { margin-bottom: 0.75rem !important; }
        .mb-2 { margin-bottom: 0.5rem !important; }
        
        /* Compactage */
        .card-header {
            padding: 15px 20px;
        }
        
        .content-card {
            padding: 20px;
        }
    </style>
{% endblock %}