{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1 class="mb-3">
        <i class="bi bi-cash-stack text-success"></i> Mes demandes de financement
    </h1>
    <p class="text-muted">Suivez l'état de vos demandes de crédit</p>
</div>

<div class="mb-4">
    <a href="{{ path('client_financement_request') }}" class="btn btn-lg text-white shadow" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
        <i class="bi bi-plus-circle"></i> Nouvelle demande
    </a>
</div>

{% if financements|length > 0 %}
    <div class="row g-4">
        {% for fin in financements %}
            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0
                    {% if fin.statut == 'pending' %}border-start border-warning border-5
                    {% elseif fin.statut == 'approved' %}border-start border-success border-5
                    {% else %}border-start border-danger border-5{% endif %}">
                    
                    <div class="card-header bg-transparent border-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <h6 class="mb-0 text-muted">
                                <i class="bi bi-calendar"></i>
                                {{ fin.dateDemande|date('d/m/Y H:i') }}
                            </h6>
                            <span class="badge 
                                {% if fin.statut == 'pending' %}bg-warning
                                {% elseif fin.statut == 'approved' %}bg-success
                                {% else %}bg-danger{% endif %} px-3">
                                {{ fin.formattedStatus }}
                            </span>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <h4 class="text-success mb-0">{{ fin.formattedAmount }}</h4>
                            <small class="text-muted">sur {{ fin.dureeMois }} mois</small>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small fw-bold">Objet:</label>
                            <p class="mb-0">{{ fin.objet }}</p>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small fw-bold">Banque:</label>
                            <p class="mb-0">
                                <i class="bi bi-building"></i> {{ fin.banque.nomBq }}
                            </p>
                        </div>

                        {% if fin.dateReponse %}
                            <div class="mb-3">
                                <label class="text-muted small fw-bold">Date de réponse:</label>
                                <p class="mb-0">{{ fin.dateReponse|date('d/m/Y H:i') }}</p>
                            </div>
                        {% endif %}

                        {% if fin.commentaireAgent %}
                            <div class="alert alert-info border-0 mb-0">
                                <h6 class="alert-heading small">
                                    <i class="bi bi-chat-left-text"></i> Commentaire de l'agent
                                </h6>
                                <p class="small mb-0">{{ fin.commentaireAgent }}</p>
                            </div>
                        {% endif %}
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        {% if fin.statut == 'pending' %}
                            <div class="d-flex align-items-center text-warning">
                                <div class="spinner-border spinner-border-sm me-2" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <span class="small">En cours d'examen...</span>
                            </div>
                        {% elseif fin.statut == 'approved' %}
                            <div class="alert alert-success mb-0 py-2">
                                <i class="bi bi-check-circle-fill"></i> Demande approuvée! Contactez votre agence.
                            </div>
                        {% else %}
                            <div class="alert alert-danger mb-0 py-2">
                                <i class="bi bi-x-circle-fill"></i> Demande rejetée. Voir le commentaire ci-dessus.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="bi bi-cash-coin text-muted" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-muted mb-3">Aucune demande de financement</h4>
            <p class="text-muted mb-4">Vous n'avez pas encore fait de demande de crédit.</p>
            <a href="{{ path('client_financement_request') }}" class="btn btn-lg text-white shadow" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <i class="bi bi-plus-circle"></i> Faire ma première demande
            </a>
        </div>
    </div>
{% endif %}

<style>
    .card {
        transition: all 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
</style>
{% endblock %}
