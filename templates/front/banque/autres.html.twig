{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-bank me-2"></i>Autres Banques</h1>
    <p class="text-muted">Découvrez les offres des autres établissements bancaires</p>
    
    {% if userBanque %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Vous êtes actuellement client de <strong>{{ userBanque.nomBq }}</strong>
        </div>
    {% endif %}
</div>

{% if banques|length > 0 %}
    <div class="row">
        {% for banque in banques %}
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-building text-primary me-2"></i>
                            {{ banque.nomBq }}
                        </h5>
                        
                        {% if banque.description %}
                            <p class="text-muted small">{{ banque.description }}</p>
                        {% endif %}
                        
                        <hr>
                        
                        <h6 class="mb-3"><i class="bi bi-tag me-2"></i>Offres disponibles</h6>
                        
                        {% if banque.offres|length > 0 %}
                            <div class="list-group list-group-flush">
                                {% for offre in banque.offres %}
                                    {% if offre.isCurrentlyActive() %}
                                        <div class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">{{ offre.titre }}</h6>
                                                    <small class="text-muted">
                                                        {{ offre.typeOffre|title }}
                                                        {% if offre.taux %}
                                                            - Taux: {{ offre.taux }}%
                                                        {% endif %}
                                                    </small>
                                                    {% if offre.description %}
                                                        <p class="mb-1 small mt-1">{{ offre.description|slice(0, 100) }}...</p>
                                                    {% endif %}
                                                </div>
                                                <span class="badge bg-success">Actif</span>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                Aucune offre active pour le moment
                            </p>
                        {% endif %}
                        
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <small><strong>Note:</strong> Pour bénéficier de ces offres, vous devez avoir un compte dans cette banque.</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-bank" style="font-size: 4rem; color: var(--medium-gray);"></i>
            <p class="text-muted mt-3">Aucune autre banque disponible pour le moment</p>
        </div>
    </div>
{% endif %}
{% endblock %}
