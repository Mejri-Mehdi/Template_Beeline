{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1 class="mb-3">
        <i class="bi bi-building text-primary"></i> {{ banque.nomBq }}
    </h1>
    <p class="text-muted">Informations détaillées sur votre banque</p>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations générales</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="text-muted small">Nom de la banque</label>
                    <h5>{{ banque.nomBq }}</h5>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Site web</label>
                    <p><a href="{{ banque.siteWeb }}" target="_blank" class="text-decoration-none">{{ banque.siteWeb }} <i class="bi bi-box-arrow-up-right"></i></a></p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Email</label>
                    <p><i class="bi bi-envelope"></i> {{ banque.emailBq }}</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Téléphone</label>
                    <p><i class="bi bi-telephone"></i> {{ banque.telephoneBq }}</p>
                </div>
                {% if banque.description %}
                <div class="mb-0">
                    <label class="text-muted small">Description</label>
                    <p class="text-secondary">{{ banque.description }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Agences ({{ agences|length }})</h5>
            </div>
            <div class="card-body">
                {% if agences|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for agence in agences %}
                            <div class="list-group-item px-0 border-bottom">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-building text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">{{ agence.nomAgence }}</h6>
                                        <p class="text-muted small mb-1"><i class="bi bi-geo-alt"></i> {{ agence.adresse }}</p>
                                        <p class="text-muted small mb-1"><i class="bi bi-telephone"></i> {{ agence.telephone }}</p>
                                        {% if agence.horaires %}
                                            <p class="text-muted small mb-0"><i class="bi bi-clock"></i> {{ agence.horaires }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">Aucune agence disponible pour le moment.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>
{% endblock %}
